<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>

<h1>All Game Stores</h1>

<% for (let campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(campground.images.length) { %>
            <img class="img-fluid" src="<%= campground.images[0].url %>">
            <% }else { %>
            <img class="img-fluid"
                src="https://res.cloudinary.com/dmlwg7ncb/image/upload/v1667413902/SelfYelp/tbuyxir1gvkx1yv4hoxy.jpg">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= campground.title %>
                </h5>
                <p class="card-text">
                    <%= campground.description %>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        <%= campground.location %>
                    </small>
                </p>
                <a href="/gamestores/<%= campground._id %>" class="btn btn-primary">View <%= campground.title%></a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const stringCampgrounds = <%- JSON.stringify(campgrounds) %>
</script>
<script src="/javascripts/clusterMap.js"></script>